{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "files": [
    "./src/app/app.ts",
    "./src/common/emitter-service.ts",
    "./src/common/headers.ts",
    "./src/index.ts",
    "./src/play/play.ts",
    "./src/question/question.ts"
  ],
  "filesGlob": [
    "!./typings/**/*.ts",
    "./src/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
